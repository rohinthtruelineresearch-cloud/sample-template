{
  "name": "notepad-chat-root",
  "version": "1.0.0",
  "description": "Root package for Notepad Messenger",
  "scripts": {
    "start": "concurrently \"npm run start:backend\" \"npm run start:desktop\"",
    "start:backend": "npm start --prefix server",
    "start:desktop": "npm start --prefix app",
    "setup": "npm install && npm install --prefix server && npm install --prefix app"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
